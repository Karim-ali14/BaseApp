    <style name="app_normal_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_7sdp</item>
        <item name="android:paddingBottom">@dimen/_7sdp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/normal_button_shape</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="app_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_app_height_50dp</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
