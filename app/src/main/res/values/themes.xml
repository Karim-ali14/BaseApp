<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaseApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray_color</item>
        <item name="colorOnPrimary">@color/dark_orange_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue_color</item>
        <item name="colorSecondaryVariant">@color/nero_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textStyleWithBlackInterMedium16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="textStyleWithHintColorInterMedium16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="textStyleWithInterBold16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="textStyleWithInterSemiBold24sp">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="textStyleWithInterBlack30sp">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/inter_black</item>
    </style>

    <style name="textStyleWithInterBold30sp">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>


    <style name="textStyleWithInterMedium14sp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="textStyleWithInterMedium13sp">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="placeHolderEdittextStyleWithInterMedium14sp">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="placeHolderEdittextStyleWithInterMedium15sp">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>


    <style name="app_normal_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_7sdp</item>
        <item name="android:paddingBottom">@dimen/_7sdp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/normal_button_shape</item>
    </style>

</resources>