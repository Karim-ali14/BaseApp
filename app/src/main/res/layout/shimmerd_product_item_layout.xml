<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    android:layout_width="match_parent"
    android:layout_height="188dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shimmer_auto_start="true"
    app:shimmer_base_color="@color/gray_color"
    app:shimmer_highlight_color="@color/white"
    >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="188dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardBackgroundColor="@color/component_background_color"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_8sdp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_5sdp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/gray_color">

            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_6sdp" />

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_15sdp"
                android:id="@+id/product_name"
                style="@style/textStyleWithColorSecondaryInterMedium11dot52sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAlignment="viewStart"
                android:background="@color/gray_color"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="@dimen/_10sdp"
                style="@style/textStyleWithPriceColorMedium10dot56sp"
                android:textAlignment="viewStart"
                android:background="@color/gray_color"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_7sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_2sdp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_weight="2.2"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_color"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_6sdp">

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="wrap_content" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="0dp"
                    app:cardForegroundColor="@color/gray_color">

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</com.facebook.shimmer.ShimmerFrameLayout>