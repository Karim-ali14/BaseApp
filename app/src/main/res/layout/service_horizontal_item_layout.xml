<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="194dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/_7sdp"
    app:cardBackgroundColor="@color/product_background_color"
    android:layout_marginStart="@dimen/_10sdp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
        </com.google.android.material.card.MaterialCardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_name"
            style="@style/textStyleWithColorSecondaryInterMedium11dot52sp"
            android:text="This service Name"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Description_txt"
            style="@style/textStyleWithDescriptionColorInterMedium10sp"
            android:text="Lorem ipsum dolor sit amet consec"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start from"
                style="@style/textStyleWithSeeAllColorMedium10dot56sp"
                />
            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textStyleWithPriceColorMedium10dot56sp"
                android:textAlignment="viewStart"
                android:text="$ 20"
                />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_2sdp"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSecondary"
                app:cardCornerRadius="@dimen/_7sdp"
                app:cardElevation="0dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_6sdp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view"
                        style="@style/textStyleWithWhiteInterRegular11dot52sp"

                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <Space
                android:layout_width="@dimen/_8sdp"
                android:layout_height="wrap_content"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="32dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="0dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mark_img"
                        app:tint="@color/black"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>