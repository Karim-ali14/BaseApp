<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="sectionItem"
            type="com.karimali.baseapp.date.models.home.CategoryModel" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_7sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginVertical="1dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            bind:setBackgroundColor="@{sectionItem.text_color}"
            android:alpha=".20"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                bind:loadingImageUrl="@{sectionItem.icon}"/>

            <Space
                android:layout_width="@dimen/_9sdp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pencil"
                bindTextColor="@{sectionItem.text_color}"
                style="@style/placeHolderEdittextStyleWithInterMedium15sp" />

            <Space
                android:layout_width="@dimen/_9sdp"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_icon"
                android:rotation="180"
                bind:setImageTint="@{sectionItem.text_color}"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>