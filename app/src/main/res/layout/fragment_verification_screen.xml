<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.auth.VerificationScreen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            style="@style/textStyleWithInterSemiBold24sp"
            android:text="@string/otp_verification"
            android:paddingTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingHorizontal="@dimen/default_horizontal_padding" />

        <TextView
            android:paddingTop="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            style="@style/textStyleWithHintColorInterMedium16sp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="Lorem ipsum dolor sit amet, consectetur \n adipiscing elit."
            android:id="@+id/desctiption_tx"
            android:lineHeight="@dimen/_22sdp"
            />


        <LinearLayout
            android:id="@+id/code_boxes_layout"
            android:layout_width="268dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desctiption_tx"
            android:layout_marginTop="@dimen/_15sdp">

            <EditText
                android:id="@+id/num_box1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:minWidth="35dp"
                android:hint="."
                android:textColorHint="@color/gray_color"
                android:background="@drawable/verification_edit_text_shape"
                android:nextFocusLeft="@+id/num_box2"
                android:nextFocusRight="@+id/num_box2"
                android:nextFocusUp="@+id/num_box2"
                android:nextFocusDown="@+id/num_box2"
                android:nextFocusForward="@id/num_box2"
                style="@style/textVerificationCodeStyle"
                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/num_box2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/verification_edit_text_shape"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:minWidth="35dp"
                android:hint="."
                android:textColorHint="@color/gray_color"
                android:nextFocusLeft="@+id/num_box3"
                android:nextFocusRight="@+id/num_box3"
                android:nextFocusUp="@+id/num_box3"
                android:nextFocusDown="@+id/num_box3"
                android:nextFocusForward="@id/num_box3"
                style="@style/textVerificationCodeStyle" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/num_box3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/verification_edit_text_shape"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:minWidth="35dp"
                android:hint="."
                android:textColorHint="@color/gray_color"
                android:nextFocusLeft="@+id/num_box4"
                android:nextFocusRight="@+id/num_box4"
                android:nextFocusUp="@+id/num_box4"
                android:nextFocusDown="@+id/num_box4"
                android:nextFocusForward="@id/num_box4"
                style="@style/textVerificationCodeStyle" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/num_box4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/verification_edit_text_shape"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:minWidth="35dp"
                android:hint="."
                android:textColorHint="@color/gray_color"
                style="@style/textVerificationCodeStyle" />

        </LinearLayout>

        <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/send_summary"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            style="@style/app_normal_button_style"
            android:elevation="8dp"
            android:gravity="center"
            android:shadowRadius="9.0"
            android:text="@string/verify_now"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:spinning_bar_color="#FFF"
            app:spinning_bar_padding="6dp"
            app:layout_constraintTop_toBottomOf="@+id/code_boxes_layout"
            android:layout_marginVertical="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <LinearLayout
            android:id="@+id/verification_timer_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/send_summary"
            android:layout_marginVertical="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/didn_t_you_receive_any_code"
                style="@style/textStyleWithHintColorInterMedium16sp" />

<!--            <TextView-->
<!--                style="@style/textStyleWithFSARegularAnd16sp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                android:paddingHorizontal="@dimen/_5sdp"-->
<!--                android:text="1:30"-->
<!--                android:id="@+id/resendTv"-->
<!--                android:textColor="@color/app_second_color"-->
<!--                />-->
        </LinearLayout>

        <TextView
            android:id="@+id/resend_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/re_send_code"
            android:layout_marginVertical="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verification_timer_layout"
            style="@style/textStyleWithInterSemiBold16sp"
            bind:setLineUnderText="@{true}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>