<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/splashScreen">


    <include app:graph="@navigation/auth_navigation" />

    <include app:graph="@navigation/home_navigation"/>

    <fragment
        android:id="@+id/splashScreen"
        android:name="com.karimali.baseapp.ui.fragments.SplashScreen"
        android:label=""
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreen_to_auth_navigation"
            app:destination="@id/auth_navigation"
            app:launchSingleTop="true"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreen_to_home_navigation"
            app:destination="@id/home_navigation" />


    </fragment>



</navigation>