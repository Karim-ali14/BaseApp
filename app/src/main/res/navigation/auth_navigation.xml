<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_navigation"
    app:startDestination="@id/welcomeScreen">

    <include app:graph="@navigation/home_navigation"/>

    <fragment
        android:id="@+id/welcomeScreen"
        android:name="com.karimali.baseapp.ui.fragments.auth.WelcomeScreen"
        android:label=""
        tools:layout="@layout/fragment_welcome_screen" >
        <action
            android:id="@+id/action_welcomeScreen_to_loginScreen"
            app:destination="@id/loginScreen"
            app:enterAnim="@anim/enter_anim2"
            app:exitAnim="@anim/exit_anim2"
            app:popEnterAnim="@anim/pop_enter_anim2"
            app:popExitAnim="@anim/pop_exit_anim2"/>
        <action
            android:id="@+id/action_welcomeScreen_to_signUpScreen"
            app:destination="@id/signUpScreen"
            app:enterAnim="@anim/enter_anim2"
            app:exitAnim="@anim/exit_anim2"
            app:popEnterAnim="@anim/pop_enter_anim2"
            app:popExitAnim="@anim/pop_exit_anim2"/>
    </fragment>

    <fragment
        android:id="@+id/loginScreen"
        android:name="com.karimali.baseapp.ui.fragments.auth.LoginScreen"
        android:label=""
        tools:layout="@layout/fragment_login_screen">
        <action
            android:id="@+id/action_loginScreen_to_signUpScreen"
            app:destination="@id/signUpScreen"
            app:enterAnim="@anim/enter_anim"
            app:exitAnim="@anim/exit_anim"
            app:popEnterAnim="@anim/pop_enter_anim"
            app:popExitAnim="@anim/pop_exit_anim" />
        <action
            android:id="@+id/action_loginScreen_to_home_navigation"
            app:destination="@id/home_navigation"
            app:enterAnim="@anim/enter_anim"
            app:exitAnim="@anim/exit_anim"
            app:popEnterAnim="@anim/pop_enter_anim"
            app:popExitAnim="@anim/pop_exit_anim"/>
    </fragment>

    <fragment
        android:id="@+id/signUpScreen"
        android:name="com.karimali.baseapp.ui.fragments.auth.SignUpScreen"
        android:label=""
        tools:layout="@layout/fragment_sign_up_screen">
        <action
            android:id="@+id/action_signUpScreen_to_verificationScreen"
            app:destination="@id/verificationScreen"
            app:enterAnim="@anim/enter_anim"
            app:exitAnim="@anim/exit_anim"
            app:popEnterAnim="@anim/pop_enter_anim"
            app:popExitAnim="@anim/pop_exit_anim" />
        <argument
            android:name="type"
            app:argType="com.karimali.baseapp.common.utils.Enums$NavigationTypes"
            android:defaultValue="SignUp" />
    </fragment>

    <fragment
        android:id="@+id/verificationScreen"
        android:name="com.karimali.baseapp.ui.fragments.auth.VerificationScreen"
        android:label=""
        tools:layout="@layout/fragment_verification_screen">
        <action
            android:id="@+id/action_verificationScreen_to_completeProfileScreen"
            app:destination="@id/completeProfileScreen"
            app:enterAnim="@anim/enter_anim"
            app:exitAnim="@anim/exit_anim"
            app:popEnterAnim="@anim/pop_enter_anim"
            app:popExitAnim="@anim/pop_exit_anim"/>
        <argument
            android:name="type"
            app:argType="com.karimali.baseapp.common.utils.Enums$NavigationTypes" />
        <argument
            android:name="phone"
            app:argType="string" />
        <action
            android:id="@+id/action_verificationScreen_to_newPasswordScreen"
            app:destination="@id/newPasswordScreen"
            app:enterAnim="@anim/enter_anim"
            app:exitAnim="@anim/exit_anim"
            app:popEnterAnim="@anim/pop_enter_anim"
            app:popExitAnim="@anim/pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/completeProfileScreen"
        android:name="com.karimali.baseapp.ui.fragments.auth.CompleteProfileScreen"
        android:label=""
        tools:layout="@layout/fragment_complete_profile_screen">
        <argument
            android:name="phone"
            app:argType="string" />
        <argument
            android:name="code"
            app:argType="string" />
        <action
            android:id="@+id/action_completeProfileScreen_to_home_navigation"
            app:destination="@id/home_navigation"
            app:enterAnim="@anim/enter_anim"
            app:exitAnim="@anim/exit_anim"
            app:popEnterAnim="@anim/pop_enter_anim"
            app:popExitAnim="@anim/pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/newPasswordScreen"
        android:name="com.karimali.baseapp.ui.fragments.auth.NewPasswordScreen"
        tools:layout="@layout/fragment_new_password_screen">
        <argument
            android:name="phone"
            app:argType="string" />
        <argument
            android:name="code"
            app:argType="string" />
        <action
            android:id="@+id/action_newPasswordScreen_to_loginScreen"
            app:destination="@id/loginScreen" />
    </fragment>
</navigation>